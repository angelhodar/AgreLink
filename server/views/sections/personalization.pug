mixin personalization(exercise)
    <div class="row center col s12">
        <h2 class="light-teal-text"><i class="large material-icons teal-text">settings</i></h2>
        <h4 >Personalizable</h4>
        <h6 class="light">Personaliza la dificultad de cada ejercicio con los parámetros que se ajusten mejor a cada paciente.</h6>
    </div>
    <div class="row center col s12">
        <ul class="tabs blue z-depth-1">
        <li class="tab col s4"><a class="active white-text" href="#easy">Fácil</a></li>
        <li class="tab col s4"><a class="white-text" href="#medium">Medio</a></li>
        <li class="tab col s4"><a class="white-text" href="#hard">Dificil</a></li>
        </ul>
    </div>
    <div class="row">
        <div id="easy" class="col s12 m6 l7 xl7">
            include ../components/parameters
            +parameters(exercise, "easy")
        </div>
        <div id="medium" class="col s12 m6 l7 xl7" style="display: none;">
            include ../components/parameters
            +parameters(exercise, "medium")
        </div>
        <div id="hard" class="col s12 m6 l7 xl7" style="display: none;">
            include ../components/parameters
            +parameters(exercise, "hard")
        </div>
        <div class="col s12 m6 l5 xl5">
            include ../components/exercise
            +exercise(exercise)
        </div>
    </div>
    <script src="/js/materialize_init_tabs.js"></script>